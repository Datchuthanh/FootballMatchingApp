<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent" >
    <androidx.cardview.widget.CardView
        android:layout_width ="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/coverclub"
                android:scaleType="fitXY"

                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/chelsealogo"
                app:border_color="@color/white"
                app:border_width="5dp"
                app:layout_constraintBottom_toBottomOf="@id/cover"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cover" />
            <LinearLayout
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/inforBasic"
                app:layout_constraintTop_toBottomOf="@id/avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity=""
                    android:layout_weight="1">
                    <TextView
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name : CLB Nam Định"/>
                    <TextView
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email : colung@gmail.com"/>
                    <TextView
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone : 0984060798"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Rating">
                    </TextView>

                    <TextView

                        android:gravity="center_horizontal"
                        android:text="9.8"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/chelsealogo"
                        android:textSize="50dp"
                         />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lblInfor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/inforBasic"
                app:layout_constraintLeft_toLeftOf="parent"
                >
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic information"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    >
                </TextView>
            </LinearLayout>

            <LinearLayout
                app:layout_constraintTop_toBottomOf="@id/lblInfor"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/listGridData"
                >

                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="Matched">
                            </TextView>
                            <TextView
                                android:textStyle="bold"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="20">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="Playes">
                            </TextView>
                            <TextView
                                android:textStyle="bold"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="17">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="Different">
                            </TextView>
                            <TextView
                                android:textStyle="bold"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="58">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/gridRow1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/weight"
                        android:layout_margin="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="Win">
                            </TextView>
                            <TextView
                                android:textStyle="bold"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="10">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/height"
                        android:layout_margin="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="Drawn">
                            </TextView>
                            <TextView
                                android:textStyle="bold"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="4">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/agePlayer"
                        android:layout_margin="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="Lose">
                            </TextView>
                            <TextView
                                android:textStyle="bold"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="3">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/listGridData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="List Player"
                        android:textSize="20dp"
                        android:textStyle="bold">
                    </TextView>
                    <Button
                        android:text="See more"
                        android:id="@+id/btnListPlayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </Button>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleViewListPlayerHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
 </ScrollView></androidx.constraintlayout.widget.ConstraintLayout>
