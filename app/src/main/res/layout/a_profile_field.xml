<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width ="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:src="@drawable/fieldcover"
                android:scaleType="fitXY"
                android:layout_height="160dp"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/fieldcover"
                app:border_color="@color/white"
                app:border_width="5dp"
                app:layout_constraintBottom_toBottomOf="@id/cover"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cover" />
            <LinearLayout
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/inforBasic"
                app:layout_constraintTop_toBottomOf="@id/avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity=""
                    android:layout_weight="1">
                    <TextView
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name : Hoang Minh Giam "/>
                    <TextView
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email : hoangminhgiam@gmail.com"/>
                    <TextView
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone : 0984060798"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Team">
                    </TextView>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/chelsealogo"
                        app:border_color="@color/white"
                        app:border_width="5dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lblInfor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/inforBasic"
                app:layout_constraintLeft_toLeftOf="parent"
                >
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic information"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    >
                </TextView>
            </LinearLayout>

            <LinearLayout
                app:layout_constraintTop_toBottomOf="@id/lblInfor"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/listGridData"
                >

                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="Fá»‰elds">
                            </TextView>
                            <TextView
                                android:textStyle="bold"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="20">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="Cost">
                            </TextView>
                            <TextView
                                android:textStyle="bold"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="400,000">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="Time">
                            </TextView>
                            <TextView
                                android:textStyle="bold"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="7h-22h">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/btnListMatch"
                app:layout_constraintTop_toBottomOf="@+id/listGridData"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="View List Match"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>