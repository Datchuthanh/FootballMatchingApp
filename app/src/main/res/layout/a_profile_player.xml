                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic information"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    >
                </TextView>
            </LinearLayout>



