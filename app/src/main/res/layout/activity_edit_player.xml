<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <import type="android.view.View" />

        <!--        <variable-->
        <!--            name="viewModel"-->
        <!--            type="ryan.ptit.smartcollege.ui.accountManage.profile.EditProfileViewModel" />-->
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Edit profile"
                android:textSize="20dp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textColor="@color/colorTittle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Avatar"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <ImageButton

                        android:background="@drawable/ic_baseline_edit_30_black"
                        android:id="@+id/btnEditAvatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"></ImageButton>
                </LinearLayout>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:background="@drawable/avatar"
                    android:scaleType="fitXY"></ImageButton>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textColor="@color/colorTittle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cover"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <ImageButton
                        android:id="@+id/btnEditCover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:background="@drawable/ic_baseline_edit_30_black"
                        android:textStyle="bold"></ImageButton>
                </LinearLayout>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:background="@drawable/anhbia"
                    android:scaleType="fitXY"></ImageButton>

                <FrameLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/colorTittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Information basic"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <ImageButton
                    android:id="@+id/btnEditBasic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:background="@drawable/ic_baseline_edit_30_black"
                    android:textStyle="bold"></ImageButton>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_baseline_account_box_24_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Chu Thanh Dat"/>
                <TextView
                    android:drawableStart="@drawable/ic_baseline_email_24_yeallow"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" datchuthanh98@gmail.com"/>
                <TextView
                    android:drawableStart="@drawable/ic_baseline_phone_24_green"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 0984060798"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/colorTittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Information player"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <ImageButton
                    android:id="@+id/btnEditPlayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_edit_30_black"
                    android:textStyle="bold"></ImageButton>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_baseline_account_box_24_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 06/07/1998"/>
                <TextView
                    android:drawableStart="@drawable/ic_baseline_email_24_yeallow"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 170 cm"/>
               <TextView
                android:drawableStart="@drawable/ic_baseline_email_24_yeallow"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 59 kg"/>
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_baseline_account_box_24_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 10"/>
                <TextView
                    android:drawableStart="@drawable/ic_baseline_email_24_yeallow"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ST"/>
                <TextView
                    android:drawableStart="@drawable/ic_baseline_phone_24_green"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/colorTittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Introduce myself"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <ImageButton
                    android:background="@drawable/ic_baseline_edit_30_black"
                    android:id="@+id/btnEditIntroduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textSize="20dp"
                    android:textStyle="bold"></ImageButton>
            </LinearLayout>

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="
Eden Michael Hazard là một cầu thủ bóng đá người Bỉ hiện đang chơi ở vị trí tiền đạo cho câu lạc bộ Real Madrid tại La Liga cũng như thi đấu cho đội tuyển Bỉ ở các giải đấu cấp độ đội tuyển. Anh là đội trưởng đội tuyển Bỉ." />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>