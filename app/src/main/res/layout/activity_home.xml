<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBG"
    >


    <LinearLayout

       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/listGridData"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardProfile"
                android:layout_margin="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                >
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:background="@drawable/user"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:text="Age">
                    </ImageView>
                    <TextView
                        android:textStyle="bold"

                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="My Profile">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTeams"
                android:layout_margin="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                >
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:background="@drawable/myteam"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:text="Age">
                    </ImageView>
                    <TextView
                        android:textStyle="bold"

                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="My Team">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/gridRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardListTeam"
                android:layout_margin="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                >
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:background="@drawable/matching"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:text="Age">
                    </ImageView>
                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="Find Team">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardListField"
                android:layout_margin="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                >
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:background="@drawable/field"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:text="Age">
                    </ImageView>
                    <TextView
                        android:textStyle="bold"

                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="Find Field">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>