<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="com.example.myclub.data.session.SessionUser"></import>
    </data>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="My Information "
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="@color/white"/>


            <ImageButton
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_baseline_sign_out_24"/>
            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_baseline_edit_30_white"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width ="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cover"
                        android:layout_width="match_parent"
                        android:src="@drawable/cover_default"
                        android:scaleType="fitXY"
                        android:layout_height="160dp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/avatar"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/avatar_player_default"
                        app:border_color="@color/white"
                        app:border_width="5dp"
                        app:layout_constraintBottom_toBottomOf="@id/cover"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cover" />

                    //Username
                  <TextView
                      android:id="@+id/lblName"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      app:layout_constraintTop_toBottomOf="@id/avatar"
                      android:textSize="30dp"
                      android:text="@{SessionUser.getInstance().playerLiveData.name}"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"></TextView>



                    //Inforcontact
                    <LinearLayout
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lblName"
                        android:id="@+id/inforContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TableLayout
                            android:id="@+id/table"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="30dp"
                            android:layout_marginHorizontal="20dp">
                            <TableRow>
                                <TextView
                                    android:paddingBottom="5dp"
                                    android:textSize="16dp"
                                    android:drawableStart="@drawable/birthday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Birthday"
                                    android:layout_weight="1"
                                    android:drawablePadding="10dp"
                                     />

                                <TextView
                                    android:paddingBottom="5dp"
                                    android:textSize="16dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{SessionUser.getInstance().playerLiveData.birthday}"
                                    android:layout_weight="1"
                                    android:gravity="center" />
                            </TableRow>
                            <TableRow>
                                <TextView
                                    android:paddingBottom="5dp"
                                    android:textSize="16dp"
                                    android:drawableStart="@drawable/weight_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Weight"
                                    android:layout_weight="1"
                                    android:drawablePadding="10dp"
                                     />

                                <TextView
                                    android:paddingBottom="5dp"
                                    android:textSize="16dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{Integer.toString(SessionUser.getInstance().playerLiveData.weight)}"
                                    android:layout_weight="1"
                                    android:gravity="center" />
                            </TableRow>

                            <TableRow>
                                <TextView
                                    android:paddingBottom="5dp"
                                    android:textSize="16dp"
                                    android:drawableStart="@drawable/height_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Height"
                                    android:layout_weight="1"
                                    android:drawablePadding="10dp"
                                 />

                                <TextView
                                    android:paddingBottom="5dp"
                                    android:textSize="16dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{Integer.toString(SessionUser.getInstance().playerLiveData.height)}"
                                    android:layout_weight="1"
                                    android:gravity="center" />
                            </TableRow>

                            <TableRow>
                                <TextView
                                    android:paddingBottom="5dp"
                                    android:textSize="16dp"
                                    android:drawableStart="@drawable/foot"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Foot nice"
                                    android:layout_weight="1"
                                    android:drawablePadding="10dp"
                                  />

                                <TextView
                                    android:paddingBottom="5dp"
                                    android:textSize="16dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{SessionUser.getInstance().playerLiveData.foot}"
                                    android:layout_weight="1"
                                    android:gravity="center" />
                            </TableRow>

                            <TableRow>
                                <TextView
                                    android:paddingBottom="5dp"
                                    android:textSize="16dp"
                                    android:drawableStart="@drawable/ic_baseline_phone_24_green"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Phone"
                                    android:layout_weight="1"
                                    android:drawablePadding="10dp"
                                   />

                                <TextView
                                    android:paddingBottom="5dp"
                                    android:textSize="16dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{SessionUser.getInstance().playerLiveData.phone}"
                                    android:layout_weight="1"
                                    android:gravity="center" />
                            </TableRow>

                            <TableRow>
                                <TextView
                                    android:paddingBottom="5dp"
                                    android:textSize="16dp"
                                    android:drawableStart="@drawable/email_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Email"
                                    android:layout_weight="1"
                                    android:drawablePadding="10dp"
                                     />

                                <TextView
                                    android:paddingBottom="5dp"
                                    android:textSize="16dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{SessionUser.getInstance().playerLiveData.email}"
                                    android:layout_weight="1"
                                    android:gravity="center" />
                            </TableRow>


                            <TableRow>
                                <TextView
                                    android:paddingBottom="5dp"
                                    android:textSize="16dp"
                                    android:drawableStart="@drawable/address_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Address:"
                                    android:layout_weight="1"
                                    android:drawablePadding="10dp"/>

                                <TextView
                                    android:paddingBottom="5dp"
                                    android:textSize="16dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{SessionUser.getInstance().playerLiveData.address}"
                                    android:layout_weight="1"
                                    android:gravity="center" />
                            </TableRow>
                        </TableLayout>

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>