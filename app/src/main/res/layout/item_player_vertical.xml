<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="10dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
   >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/avatarPlayer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/player_default"
            />
        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:id="@+id/namePlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eden Hazard"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/avatarPlayer"
            app:layout_constraintBottom_toTopOf="@+id/position"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "GK"
            app:layout_constraintTop_toBottomOf="@+id/namePlayer"
            app:layout_constraintLeft_toRightOf="@id/avatarPlayer"
            app:layout_constraintBottom_toBottomOf="parent"
            />
            <TextView
                 android:id="@+id/numberShirt"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="10"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>